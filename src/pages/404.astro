---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404" >
	<div class="main">
		<div class="con">
			<h1>404</h1>
			<h2>page not found</h2>
			<div class="gradient-border">
				<button class="gradient-btn" ><a style="text-decoration: none;" href="/">HomePage</a></button>
			</div>
		</div>
	</div>
</Layout>

<style>
	body{
		background-color: black !important;
	}
	.main{
		height: 100vh;
		width: 100vw;
	}
	h1{
		transform: translate(0px,clamp(20px,10vw,50px));
		font-size: clamp(100px,50vw,200px);
		color: black;
    	text-transform: capitalize;
		-webkit-background-clip: text !important;
		background: rgb(97,0,232);
		background: linear-gradient(90deg, rgba(97,0,232,1) 0%, rgba(209,0,255,1) 100%); 
    	background-size: 200% 200%;
		-webkit-text-stroke: 8px transparent;
	}
	h2{
		/* position: absolute; */
		text-align: center;
		/* top: 140px; */
		/* left: 0px; */
		font-size: clamp(20px,10vw,50px);
		color: transparent;
    	text-transform: capitalize;
		-webkit-background-clip: text !important;
		background: rgb(97,0,232);
		background: linear-gradient(90deg, rgba(97,0,232,1) 0%, rgba(209,0,255,1) 100%); 
    	background-size: 200% 200%;
	}
	button{
		/* padding: 10px; */
		/* font-size: 20px; */
		/* border: 1px solid ; */
		/* background: linear-gradient(90deg, rgba(97,0,232,1) 0%, rgba(209,0,255,1) 100%);  */
	}
	.gradient-border{
			background: linear-gradient(90deg, rgba(97,0,232,1) 0%, rgba(209,0,255,1) 100%); 
			border-radius: 6px;
			padding: 1px;
			margin-top: 10px;
		}
		.gradient-btn{
			background-color: #191c22;
			border: none;
			border-radius: 6px;
			transition: 400ms;
			padding: 10px 10px;
			font-family: system-ui, sans-serif;
			font-weight: 600;
			font-size: 13px;
			
		}
		button:hover{
			background-color: transparent;
			}
	.con{
		position: absolute;
		top: 40%;
		left: 50%;
		transform: translate(-50%,-50%);
		width: 100vw;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
	}
</style>