---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="bro note is a powerfull note app for simple work"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:image" content="/public/screenshot.png" />
    <meta name="twitter:title" content="Bro Note" />
    <meta name="twitter:site" content="@https://bro-note.vercel.app/" />
    <meta
      name="twitter:description"
      content="bro note is a powerfull note app for simple work"
    />
    <meta name="twitter:image:alt" content="Bro Note Homepage " />
    <meta
      property="og:title"
      content="Bro Note a simple but powerfull note app"
    />
    <meta property="og:site_name" content="Bro Note" />
    <meta property="og:url" content="https://bro-note.vercel.app" />
    <meta
      property="og:description"
      content="bro note is a powerfull note app for simple work"
    />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/public/screenshot.png" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  * {
